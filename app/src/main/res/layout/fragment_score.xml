<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ScoreFragment"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ll_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_score_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEAM NAME"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:paddingStart="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_runs_wickets"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:text="0-0"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_overs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:text="(12.3)"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:id="@+id/ll_score_crr"
                >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CRR"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/tv_crr"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7.63"
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_req"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20dp"
                >

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REQ"
                    android:id="@+id/tv_req"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/tv_score_req"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />


            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/tv_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEAM 1 needs 4 runs to win"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:textColor="#B62F2F"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/light_background_tint"

            >
            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Batsman"
                android:paddingStart="25dp"

                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="R"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="B"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4s"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6s"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SR"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/over_boundary_background"
            >
            <TextView
                android:id="@+id/tv_score_batsman1_name"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Batsman Name"
                android:paddingStart="25dp"
                android:textColor="#004187"

                />
            <TextView
                android:id="@+id/tv_score_batsman1_runs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_score_batsman1_balls"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="97"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_batsman1_fours"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_batsman1_sixes"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_batsman1_strike_rate"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="23.34"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"

            >
            <TextView
                android:id="@+id/tv_score_batsman2_name"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Batsman Name *"
                android:paddingStart="25dp"
                android:textColor="#004187"

                />
            <TextView
                android:id="@+id/tv_score_batsman2_runs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_score_batsman2_balls"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="97"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_batsman2_fours"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_batsman2_sixes"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_batsman2_strike_rate"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="23.34"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/light_background_tint"

            >
            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bowler"
                android:paddingStart="25dp"

                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="O"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="M"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="R"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="W"
                android:gravity="center"
                />
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ER"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/over_boundary_background"
            >
            <TextView
                android:id="@+id/tv_score_bowler_name"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bowler Name"
                android:paddingStart="25dp"
                android:textColor="#004187"
                />
            <TextView
                android:id="@+id/tv_score_bowler_overs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_bowler_maiden_overs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_bowler_runs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="65"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_score_bowler_wickets"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_score_bowler_economy_rate"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6.5"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/btn_dot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="Dot"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_one"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="1"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_two"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="2"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_three"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="3"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/btn_four"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="4"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_six"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="6"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_wide"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="WIDE"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_no_ball"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="No Ball"
                android:layout_margin="5dp"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/btn_leg_byes"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="Leg Bye"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_byes"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="Bye"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_overthrow"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="Over throw"
                android:textSize="14sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_bowled"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="Bowled"
                android:textSize="12sp"
                android:layout_margin="5dp"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/btn_catch"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="catch"

                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_lbw"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="lbw"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_run_out"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="run out"
                android:textSize="14sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_stump"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:backgroundTint="#123456"
                android:text="stump"
                android:layout_margin="5dp"
                />


        </LinearLayout>
    </LinearLayout>






    </LinearLayout>



</LinearLayout>