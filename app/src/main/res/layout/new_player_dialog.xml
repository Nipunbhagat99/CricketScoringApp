<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <EditText
        android:id="@+id/et_player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="30"
        android:hint="Enter Player Name"
        />

    <RadioGroup
        android:id="@+id/rg_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <RadioButton
            android:id="@+id/radio_batsman"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Batsman"
            android:textSize="10sp"
            android:checked="true"


            />
        <RadioButton

            android:id="@+id/radio_wk"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Wicket-Keeper"
            android:textSize="10sp"



            />
        <RadioButton

            android:id="@+id/radio_all_rounder"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="All-rounder"
            android:textSize="10sp"


            />

        <RadioButton

            android:id="@+id/radio_bowler"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="10sp"
            android:text="Bowler" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_add_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Player"
            android:layout_marginEnd="20dp"
            android:theme="@style/Button.History"

            />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginStart="20dp"
            android:theme="@style/Button.Match"
            />


    </LinearLayout>

</LinearLayout>